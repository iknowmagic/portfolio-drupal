<!-- Page Container with Mobile-First Responsive Design -->
<div class="flex justify-center min-h-screen">
  <div class="px-5 sm:px-7 md:px-8 lg:px-15 xl:px-15 pt-10 w-full min-w-[320px] max-w-[1680px]">
    
    {# Custom Header Region #}
    {% if page.header %}
      {{ page.header }}
    {% endif %}
    
    {# Custom Hero Region #}
    {% if page.hero %}
      {{ page.hero }}
    {% endif %}
    
    {# Projects Content #}
    {% if page.content %}
      {{ page.content }}
    {% endif %}
    
    {# Custom Footer Region #}
    {% if page.footer %}
      {{ page.footer }}
    {% endif %}
    
  </div>
</div>