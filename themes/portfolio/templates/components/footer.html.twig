{#
/**
 * @file
 * Footer component - matches SvelteKit Footer.svelte
 * 
 * Features:
 * - Black background with white text
 * - Logo on left (inverted)
 * - Projects categorized by Featured/Experiments
 * - Includes FooterSocial component
 * - Uses preprocessed data from portfolio.theme
 */
#}

<!-- Footer - matches SvelteKit Footer component -->
<footer class="bg-black -mx-5 sm:-mx-7 md:-mx-8 lg:-mx-15 xl:-mx-15 px-5 sm:px-7 md:px-8 lg:px-15 xl:px-15 py-12 sm:py-15 lg:py-15 text-inverse">
  <!-- Main Footer Grid - Mobile First: 1 col, lg: 3 cols -->
  <div class="gap-6 lg:gap-8 grid grid-cols-1 lg:grid-cols-3">
    <!-- First section: Logo -->
    <div>
      <img src="/themes/custom/portfolio/images/cod3naut.png" alt="logo" class="invert mb-4 w-48" />
    </div>

    <!-- Second section: Projects by Category - Mobile First: py-6, md: py-8, lg: py-10 (40px spec) -->
    <div class="lg:col-span-2 py-6 md:py-8 lg:py-10">
      <div class="gap-4 grid grid-cols-1 sm:grid-cols-2">
        <!-- Featured Projects -->
        <div>
          <h4 class="mb-2 text-inverse text-small-600">Featured</h4>
          <ul class="space-y-1 text-inverse text-small">
            {% if featured_projects %}
              {% for project in featured_projects %}
                <li>
                  {% if project.primary_link %}
                    <a
                      href="{{ project.primary_link.url }}"
                      target="_blank"
                      rel="noopener noreferrer"
                      class="hover:text-gray-300 transition-colors"
                    >
                      {{ project.title }}
                    </a>
                  {% else %}
                    {{ project.title }}
                  {% endif %}
                </li>
              {% endfor %}
            {% else %}
              <li class="text-gray-400">No featured projects found</li>
            {% endif %}
          </ul>
        </div>
        
        <!-- Experiment Projects -->
        <div>
          <h4 class="mb-2 text-inverse text-small-600">Experiments</h4>
          <ul class="space-y-1 text-inverse text-small">
            {% if experiment_projects %}
              {% for project in experiment_projects %}
                <li>
                  {% if project.primary_link %}
                    <a
                      href="{{ project.primary_link.url }}"
                      target="_blank"
                      rel="noopener noreferrer"
                      class="hover:text-gray-300 transition-colors"
                    >
                      {{ project.title }}
                    </a>
                  {% else %}
                    {{ project.title }}
                  {% endif %}
                </li>
              {% endfor %}
            {% else %}
              <li class="text-gray-400">No experiment projects found</li>
            {% endif %}
          </ul>
        </div>
      </div>
    </div>
  </div>

  <!-- Include FooterSocial component - matches SvelteKit structure -->
  {% include '@portfolio/components/footer-social.html.twig' %}
</footer>